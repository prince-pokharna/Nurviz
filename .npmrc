# NPM Configuration for Nurvi Jewels
# This file configures npm behavior to reduce warnings and improve builds

# Allow legacy peer dependencies (reduces warnings)
legacy-peer-deps=true

# Don't show funding messages
fund=false

# Set audit level (only show high/critical security issues)
audit-level=moderate

# Disable strict engine checking
engine-strict=false

# Reduce log noise during builds
loglevel=error

# Use package-lock.json for reproducible builds
package-lock=true

# Timeout for network requests (increase for slow connections)
fetch-timeout=60000

